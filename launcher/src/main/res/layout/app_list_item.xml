<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingBottom="@dimen/app_item_padding_bottom"
              android:paddingLeft="@dimen/app_item_padding_left"
              android:paddingRight="@dimen/app_item_padding_right"
              android:paddingTop="@dimen/app_item_padding_top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/app_item_bg"
        android:orientation="vertical"
        android:paddingBottom="@dimen/app_item_bg_padding_bottom"
        android:paddingTop="@dimen/app_item_bg_padding_top">

        <ImageView
            android:id="@+id/iv_app_icon"
            android:layout_width="@dimen/app_item_width"
            android:layout_height="@dimen/app_item_height"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/tv_app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/app_item_text_color"
            android:textSize="@dimen/app_item_text_size"
            />
    </LinearLayout>


</LinearLayout>
